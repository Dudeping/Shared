@model ShareWeb.Models.CooperationModel
@{
    ViewBag.Title = "联系站长";
}

<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-envelope-o fa-fw"></i> 发邮件
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <a target="_blank" href="http://mail.qq.com/cgi-bin/qm_share?t=qm_mailme&email=Dm9qY2dgIH1mb3xrTndqb3pmIG1g" style="text-decoration:none;">
                            <i class="fa fa-paper-plane-o"></i> 给我写信
                        </a>
                    </div>
                    <!-- /.col-lg-8 (nested) -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
        @if (Request.IsAuthenticated)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-comments-o fa-fw"></i> 站内信
                </div>
                <!-- .panel-heading -->
                <div class="panel-body">
                    @using (Html.BeginForm("Contact", "Cooperation", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Sub)
                            @Html.EditorFor(model => model.Sub, new { htmlAttributes = new { @class = "form-control", placeholder = "主题" } })
                            @Html.ValidationMessageFor(model => model.Sub, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Content)
                            @Html.TextAreaFor(model => model.Content, 6, 10, new {  @class = "form-control", placeholder = "内容"  })
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Code)
                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "验证码" } })
                            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <img class="codePic" src="/Account/GetAuthCode" width="100" height="30">
                            &nbsp;&nbsp;看不清? <a href="#" class="verifyCode">换一张!</a>
                        </div>

                        <input type="submit" class="btn btn-default" value="发送" />
                    }
                </div>
                <!-- .panel-body -->
            </div>
        <!-- /.panel -->
        }
    </div>
    <!-- /.col-lg-8 -->
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="glyphicon glyphicon-paperclip fa-fw"></i> 站长信息
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>名称</th>
                                <th>描述</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="warning">
                                <td>QQ</td>
                                <td>@(ViewBag.WebMaster.QQ ?? "")</td>
                            </tr>
                            <tr class="success">
                                <td>邮箱</td>
                                <td>@(ViewBag.WebMaster.Email ?? "")</td>
                            </tr>
                            <tr class="info">
                                <td>电话</td>
                                <td>@(ViewBag.WebMaster.Tel ?? "")</td>
                            </tr>
                            <tr class="warning">
                                <td>微信</td>
                                <td>@(ViewBag.WebMaster.WeChat ?? "")</td>
                            </tr>
                            <tr class="success">
                                <td>微博</td>
                                <td><a href="@(ViewBag.WebMaster.MicroBlog ?? "http://www.ydath.cn")" target="_blank">@(ViewBag.WebMaster.MicroBlog ?? "http://www.ydath.cn")</a></td>
                            </tr>
                            <tr class="info">
                                <td>博客</td>
                                <td><a href="@(ViewBag.WebMaster.Blog ?? "http://www.ydath.cn")" target="_blank">@(ViewBag.WebMaster.Blog ?? "http://www.ydath.cn")</a></td>
                            </tr>
                            <tr class="warning">
                                <td>GitHub</td>
                                <td><a href="@(ViewBag.WebMaster.GitHub ?? "http://www.ydath.cn")" target="_blank">@(ViewBag.WebMaster.GitHub ?? "http://www.ydath.cn")</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->

        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="glyphicon glyphicon-heart-empty fa-fw"></i> 站长寄语
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <p style="text-indent: 4ex">
                        在以前，我没有明白团队的重要性，所以一次一次的错过了很多很美好的事情和人生中很重要的机会。 <br />
                    </p>
                    <p style="text-indent: 4ex">
                        后来，在一次爬山活动中，我明白了团体意识的重要性，在一次学校组织的集训中，我又在一起看到的团队呈现出来的强大力量。 <br />
                    </p>
                    <p style="text-indent: 4ex">
                        才发现，团队是一个很重要的东西，团队协作可以完成很多很了不起的事情，个人单干是没有前途的。 <br />
                    </p>
                    <p style="text-indent: 4ex">
                        所以，在这里说这些话就是希望看到这些话的同学，放下以前的执念，好好找到一个合适你的团队。 <br />
                    </p>
                    <p style="text-indent: 4ex">
                        在学习过程中，大家可以自组建一些小的组织，大家一起监督一起学习，每天核对对方的工作量，工作量可以按照GitHub上传的代码来呈现；也可以大家协作完成一些小作品。<br />
                    </p>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-4 -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}
