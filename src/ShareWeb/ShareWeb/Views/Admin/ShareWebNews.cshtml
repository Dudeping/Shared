@model ShareWeb.Models.WebNews
@{
    ViewBag.Title = "网站信息";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-wrench fa-fw"></i> 编辑基本信息
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("ShareWebNews", "Admin", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Introduce)
                        @Html.TextAreaFor(model => model.Introduce, 8, 10, new { @class = "form-control", placeholder = "网站简介" })
                        @Html.ValidationMessageFor(model => model.Introduce, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Use)
                        @Html.TextAreaFor(model => model.Use, 8, 10, new { @class = "form-control", placeholder = "网站用途" })
                        @Html.ValidationMessageFor(model => model.Use, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Method)
                        @Html.TextAreaFor(model => model.Method, 8, 10, new { @class = "form-control", placeholder = "简单使用" })
                        @Html.ValidationMessageFor(model => model.Method, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Point)
                        @Html.TextAreaFor(model => model.Point, 8, 10, new { @class = "form-control", placeholder = "技术亮点" })
                        @Html.ValidationMessageFor(model => model.Point, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Code)
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "验证码" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <img class="codePic" src="/Account/GetAuthCode" width="100" height="30">
                        &nbsp;&nbsp;看不清? <a href="#" class="verifyCode">换一张!</a>
                    </div>

                    <input type="submit" value="保存" class="btn btn-default" />
                }
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-8 -->
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="glyphicon glyphicon-paperclip fa-fw"></i> 温馨提示
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                支持MarkDown语法。
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-4 -->
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}